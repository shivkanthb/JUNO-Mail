function showComposeBox()
{
    var appendComposeContent="<br /><br /><div id=\"newMail\">To&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<input type=\"text\" id=\"newReceiver\" />";
    appendComposeContent+="<br /><br />Subject&nbsp&nbsp&nbsp<input type=\"text\" id=\"newSubject\" />";
    appendComposeContent+="<hr /><br />Message&nbsp&nbsp&nbsp<br /><textarea id=\"newMessage\" rows=\"20\" cols=\"100\"></textarea></div>";
    document.getElementById("mainDiv").innerHTML=appendComposeContent;
}
